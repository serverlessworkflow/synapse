@namespace Synapse.Dashboard

<nav class="header navbar navbar-expand-lg flex-row navbar-dark bg-dark">
    <a class="navbar-brand d-flex flex-row align-items-center justify-content-center" href="#">        
        <svg class="white logotype" viewBox="0 450 612 150" xml:space="preserve">            
            <use xlink:href="#s1-definition" />
            <use xlink:href="#y-definition" />
            <use xlink:href="#n-definition" />
            <use xlink:href="#a-definition" />
            <use xlink:href="#p-definition" />
            <use xlink:href="#s2-definition" />
            <use xlink:href="#e-definition" />
        </svg>
    </a>
    <div class="navbar-collapse @NavMenuCssClass">
        <ul class="navbar-nav">
            <li class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <small class="bi bi-house" aria-hidden="true"></small><span class="btn-label">Home</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="workflows" Match="NavLinkMatch.Prefix">
                    <small class="bi bi-gear" aria-hidden="true"></small><span class="btn-label">Workflows</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="correlations" Match="NavLinkMatch.Prefix">
                    <small class="bi bi-link-45deg" aria-hidden="true"></small><span class="btn-label">Correlations</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="application/info" Match="NavLinkMatch.Prefix">
                    <small class="bi bi-info-circle" aria-hidden="true"></small><span class="btn-label">About</span>
                </NavLink>
            </li>
        </ul>
    </div>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</nav>

@code 
{

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
