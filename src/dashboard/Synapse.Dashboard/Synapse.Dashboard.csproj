	<PackageReference Include="Neuroglia.Core" Version="2.0.1.26" />
	<PackageReference Include="Neuroglia.Data.OData" Version="2.0.1.26" />
	<PackageReference Include="Z.Blazor.Diagrams" Version="2.1.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\ports\Synapse.Ports.HttpRest.Client\Synapse.Ports.HttpRest.Client.csproj" />
